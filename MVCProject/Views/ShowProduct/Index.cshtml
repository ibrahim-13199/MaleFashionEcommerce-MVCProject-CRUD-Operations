@model List<Product>

@{
    Layout = "_OurLayout";
    ViewData["Title"] = "Details";
}

 <div class="row">
       <div class="col-lg-12 mt-2 mb-1">
           <div class="section-title">
               <span>Latest News</span>
               <h2>Our Products</h2>
               @if(User.IsInRole("Admin")==true){

             <a asp-action="New" asp-controller="ShowProduct"
                asp-route-xyz="test"

          class=" btn btn-danger align-content-center">Add Product</a>
}
           </div>
       </div>
 </div>


 

<div class="container">
  
  <div class="row ">
@{
foreach ( var item in  Model )
{
 
          <div class="offset-1 col-lg-3 col-md-6 col-sm-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/mainLayOut/images/@item.image">
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a href="#"><img src="/mainLayOut/icon/heart.png" alt=""></a></li>
                                <li><a href="#"><img src="/mainLayOut/icon/compare.png" alt=""> <span>Compare</span></a></li>
                                <li><a href="#"><img src="/mainLayOut/icon/search.png" alt=""></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@item.tilte</h6>
                            
                            <a href="#" class="add-cart">+ Add To Cart</a>

                            <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>

                            <h5>$ @item.price</h5>
                            <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1">
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                              
                                
                            </div>
                                                                                                                     
                        </div>
              </div>
  
              @if(User.IsInRole("Admin")==true){ <a href="/ShowProduct/Details?id=@item.Id" class="add-cart m-2" style="color:red">Details</a>
                            <a href="/ShowProduct/Edit/@item.Id" class="add-cart m-2" style="color:red">Edit</a>
                            <a href="/ShowProduct/deleteproduct/@item.Id" class="add-cart m-1" style="color:red" >Delete</a>
    }  else
            {
                 <a href="/ShowProduct/Details?id=@item.Id" class="btn btn-danger" >See Details</a>
               
            }
    </div>
} }
</div>
</div>










